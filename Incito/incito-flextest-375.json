                "layout_width": 200,
                "background_color": "#f5bfb5",
                "child_views": [
                    {
                        "padding": 10,
                        "layout_width": 30,
                        "layout_margin": 5,
                        "background_color": "#a83f81"
                    },
                    { 
                        "view_name": "View",
                        "padding": 10,
                        "layout_left": 20,
                        "layout_width": 100,
                        "gravity": "center_horizontal",
                        "background_color": "#9a0165",
                        "child_views": [
                            {
                                "padding": 5,
                                "layout_margin": "10%",
                                "layout_width": 20,
                                "layout_top": 20,
                                "background_color": "#ff0000"
                            }
                        ]
                    },
                    { 
                        "view_name": "TextView",
                        "text": "hello",
                        "text_size": 20,
                        "padding": 10,
                        "layout_margin": 5,
                        "background_color": "#b280cb",
                        "child_views": [
                            {
                                "padding": 5,
                                "layout_margin": 2,
                                "layout_left": 20,
                                "background_color": "#ff0000"
