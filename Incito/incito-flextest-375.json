{
    "version": "1.0.0",
    "id": "flex-test-375",
    "theme": {
        "background_color": "#5c5c5c"
    },
    "root_view": {
        "layout_width": 350,
        "padding": 10,
        "gravity": "center_horizontal",
        "background_color": "#ffffff",
        "child_views": [
            { 
                "view_name": "FlexLayout",
                "padding": 10,
                "gravity": "left_horizontal",
                "layout_margin": 10,
