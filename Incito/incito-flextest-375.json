                "child_views": [
                    {
                        "layout_flex_grow": 1,
                        "layout_height": 50,
                        "padding": 10,
                        "layout_right": 50,
                        "layout_margin": 5,
                        "background_color": "#a83f81"
                    },
                    { 
                        "padding": 10,
                        "layout_flex_grow": 1,
                        "layout_width": "50%",
                        "layout_margin": 2,
                        "background_color": "#9a0165"
                    },
                    { 
                        "layout_flex_grow": 1,
                        "layout_height": 20,
                        "padding": 20,
                        "layout_margin": 4,
                        "background_color": "#b280cb"
                    }
                ]
            },
            { 
                "view_name": "View",
                "padding_left": 10,
                "padding_right": 0,
