                            {
                                "padding": 5,
                                "layout_margin": 10,
                                "layout_left": 20,
                                "layout_width": 100,
                                "background_color": "#00ff00"
                            }
                        ]
                    }
                ]
            },
            { 
                "view_name": "AbsoluteLayout",
                "padding": 10,
                "gravity": "right_horizontal",
                "layout_width": "50%",
                "layout_height": 130,
                "background_color": "#f5bfb5",
                "child_views": [
                    {
                        "padding": 10,
                        "layout_width": 30,
                        "layout_margin": 5,
                        "layout_left": 0,
                        "background_color": "#a83f81"
                    },
                    { 
                        "padding": 10,
                        "layout_top": 30,
                        "layout_margin": 5,
                        "background_color": "#9a0165",
                        "child_views": [
                            {
                                "padding": 5,
                                "layout_margin": 2,
                                "layout_left": 20,
                                "background_color": "#ff0000"
                            },
                            {
                                "padding": 5,
                                "layout_margin": 10,
                                "layout_left": 20,
                                "layout_width": 100,
                                "background_color": "#00ff00"
                            }
                        ]
                    },
                    { 
                        "view_name": "TextView",
                        "text": "hello I am very long am i constrained?",
                        "text_size": 20,
                        "padding": 10,
                        "layout_top": 80,
                        "background_color": "#b280cb"
                    }
                ]
